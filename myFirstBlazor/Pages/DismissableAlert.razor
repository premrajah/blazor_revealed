
@if (Show)
{

    <div class="alert alert-dismissible alert-warning fade show" role="alert">
        @ChildContent
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="@Dismiss"><span aria-hidden="true">&times;</span></button>
    </div>
}

@functions
{
    [Parameter]
    public bool Show { get; set; } = true;
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public void Dismiss()
    {
        Console.WriteLine("Dismissing alert");
        Show = false;
    }
}